<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Infrastructure Audit | {{ report_date }}</title>
    <style>
        {% include 'report_styles.css' %}
    </style>
</head>
<body>
{% macro status_badge(status) %}
{%- set s = status | default('unknown') | string | upper -%}
{%- if s in ['OK', 'HEALTHY', 'GREEN'] -%}
<span class="badge status-ok">OK</span>
{%- elif s in ['CRITICAL', 'RED', 'FAILED'] -%}
<span class="badge status-fail">CRITICAL</span>
{%- else -%}
<span class="badge" style="background:#d97706;color:#fff;border-color:#f59e0b;">WARN</span>
{%- endif -%}
{% endmacro %}

<div class="app-layout">
    <nav class="sidebar">
        <div class="sidebar-brand">
            <span class="brand-accent"></span>
            <span class="brand-text">NCS OPERATIONS</span>
        </div>
        <ul class="nav-links">
            <li class="active" onclick="showTab('summary', this)">System Overview</li>
            <li onclick="showTab('compute', this)">Compute Environment</li>
            <li onclick="showTab('storage', this)">Storage & Fabric</li>
            <li onclick="showTab('security', this)">Security Compliance</li>
            <li onclick="showTab('alerts', this)">
                Alert Queue
                {% if totals.get('critical', 0)|int > 0 %}
                    <span class="count-pill">{{ totals.get('critical', 0) }}</span>
                {% endif %}
            </li>
        </ul>
        <div class="sidebar-meta">
            ID: {{ report_id[:8] if report_id else '---' }}<br>
            {{ report_date }}
        </div>
    </nav>

    <main class="content">
        <header class="content-header">
            <div class="title-group">
                <h1>Global Fleet Health Dashboard</h1>
                <p>Real-time status of managed infrastructure assets.</p>
            </div>
            <div class="header-util">
                <input type="text" id="hostSearch" onkeyup="filterHosts()" placeholder="Filter by hostname...">
                <button class="btn-secondary" onclick="window.print()">Print Report</button>
            </div>
        </header>

        <section id="summary" class="tab-content active">
            <div class="stat-grid">
                <div class="stat-card">
                    <label>Fleet Compliance</label>
                    <div class="stat-value">{{ 100 - (totals.get('critical', 0) * 1.5)|int }}%</div>
                    <div class="progress-track"><div class="progress-fill" style="width: {{ 100 - (totals.get('critical', 0) * 1.5) }}%;"></div></div>
                </div>
                <div class="stat-card">
                    <label>Critical Faults</label>
                    <div class="stat-value {{ 'danger' if totals.get('critical', 0)|int > 0 }}">{{ totals.get('critical', 0) }}</div>
                </div>
                <div class="stat-card">
                    <label>Warning States</label>
                    <div class="stat-value {{ 'warning' if totals.get('warning', 0)|int > 0 }}">{{ totals.get('warning', 0) }}</div>
                </div>
            </div>

            <h2 class="sub-title">Platform & Fleet Dashboards</h2>
            <div class="card-wrap">
                <table>
                    <thead>
                        <tr>
                            <th>Infrastructure Platform</th>
                            <th>Asset Count</th>
                            <th>Fleet Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><strong>Linux & Ubuntu Environment</strong></td>
                            <td>{{ groups.get('ubuntu_servers', []) | length }} Nodes</td>
                            <td>{{ status_badge(linux_global_health | default('OK' if totals.get('critical', 0)|int == 0 else 'CRITICAL')) }}</td>
                            <td>
                                <a href="platform/ubuntu/ubuntu_health_report_{{ report_stamp | default(now(utc=true, fmt='%Y%m%d')) }}.html" style="display: inline-block; padding: 6px 12px; background: var(--indigo, #4f46e5); color: white; text-decoration: none; border-radius: 4px; font-weight: bold; font-size: 0.8rem;">
                                    View Linux Fleet ↗
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>VMware vCenter Environment</strong></td>
                            <td>{{ groups.get('vcenters', []) | length }} Clusters</td>
                            <td>{{ status_badge(vmware_global_health | default('OK' if (c_alarms.get('critical', 0)|int) == 0 else 'CRITICAL')) }}</td>
                            <td>
                                <a href="platform/vmware/vmware_health_report_{{ report_stamp | default(now(utc=true, fmt='%Y%m%d')) }}.html" style="display: inline-block; padding: 6px 12px; background: var(--indigo, #4f46e5); color: white; text-decoration: none; border-radius: 4px; font-weight: bold; font-size: 0.8rem;">
                                    View VMware Fleet ↗
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

        <section id="security" class="tab-content">
            <h2 class="sub-title">STIG Compliance Audit</h2>
            {% for hostname, audits in all_hosts.items() %}
            {% if audits.stig is defined %}
            <div class="compliance-entry">
                <div class="entry-header">
                    <h3>{{ hostname }}</h3>
                    {{ status_badge(audits.stig.health) }}
                </div>
                <div class="finding-grid">
                    {% for alert in audits.stig.alerts %}
                    <div class="finding-card {{ alert.severity | lower }}">
                        <span class="finding-id">{{ alert.detail.rule_id | default('V-RULE') }}</span>
                        <p>{{ alert.message }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </section>

        <section id="compute" class="tab-content">
            <h2 class="sub-title">Virtualization Resource Saturation</h2>
            <div class="compute-grid">
                {% for hostname, audits in all_hosts.items() %}
                    {% if audits.vcenter_health is defined %}
                        <div class="vcenter-node">
                            <h3>vCenter: {{ hostname }}</h3>
                            <div class="resource-flex">
                                {% for cluster in audits.vcenter_health.inventory.clusters.list %}
                                <div class="cluster-card">
                                    <label>{{ cluster.name }}</label>
                                    <div class="metric">
                                        <span>CPU: {{ cluster.utilization.cpu_pct }}%</span>
                                        <div class="mini-bar"><div class="fill" style="width: {{ cluster.utilization.cpu_pct }}%;"></div></div>
                                    </div>
                                    <div class="metric">
                                        <span>RAM: {{ cluster.utilization.mem_pct }}%</span>
                                        <div class="mini-bar"><div class="fill" style="width: {{ cluster.utilization.mem_pct }}%;"></div></div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </section>
    </main>
</div>

<script>
    function showTab(tabId, el) {
        document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.nav-links li').forEach(l => l.classList.remove('active'));
        document.getElementById(tabId).classList.add('active');
        el.classList.add('active');
    }
</script>
</body>
</html>
