---
profile: production
exclude_paths:
  - .venv/
  - logs/
  - inventory/production/vault.yaml
  - collections/ansible_collections/cloud/
  - collections/ansible_collections/community/
  - collections/ansible_collections/vmware/
skip_list:
  - yaml[line-length]
  - name[secondary]
  - name[casing]
  - jinja[spacing]
  - var-naming
  - fqcn
  - risky-file-permissions
warn_list:
  - experimental
# Specific to this project's migration
mock_modules:
  - community.vmware.vmware_guest_facts
  - dellemc.unity.unity_gather_facts
