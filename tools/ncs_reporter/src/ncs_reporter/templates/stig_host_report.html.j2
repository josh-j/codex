<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% set view = stig_host_view | default({}) %}
    {% set meta = view.get('meta', {}) %}
    {% set target = view.get('target', {}) %}
    {% set summary = view.get('summary', {}) %}
    {% set by_status = summary.get('by_status', {}) %}
    {% set findings_summary = summary.get('findings', {}) %}
    {% set findings = view.get('findings', []) %}
    <title>STIG Report - {{ target.get('host', 'unknown') }}</title>
    <style>
        {% include 'report_shared.css' %}
        .sev-critical { color: var(--red); font-weight: bold; }
        .sev-warning { color: var(--amber); font-weight: bold; }
        .sev-info { color: var(--text-muted); }
    </style>
    <script>
        function toggleDetails(id) {
            var x = document.getElementById(id);
            if (!x) return;
            x.style.display = (x.style.display === "block") ? "none" : "block";
        }
    </script>
</head>
<body>
<div class="container">
    {% set _host_badge = (target.get('status', {}).get('raw', 'UNKNOWN')) | status_badge_meta %}
    <div class="header">
        <div>
            <h1>STIG Compliance Report</h1>
            <div class="meta">
                Host: <strong>{{ target.get('host', 'unknown') }}</strong>
            </div>
            <div class="meta">
                Target: <strong>{{ target.get('target_type', 'unknown') | upper }}</strong>
                | Platform: <strong>{{ target.get('platform', 'unknown') }}</strong>
                | Status: <span class="badge {{ _host_badge.css_class }}">{{ _host_badge.label }}</span>
            </div>
        </div>
        <div class="meta">Generated: {{ meta.get('report_date', now_datetime | default('N/A')) }}</div>
    </div>

    {% if findings | length == 0 %}
    <div style="padding: 16px; border: 1px solid #e67e22; background: #fff6e5; border-radius: 10px; margin: 20px 0;">
        <strong>No STIG checks were recorded.</strong>
        <div style="margin-top: 8px;">
            This usually means the audit produced no findings.
            Verify that the discovery tasks ran successfully and were not skipped.
        </div>
    </div>
    {% endif %}

    <div class="metrics-row">
        <div class="metric-card">
            <h3 class="metric-val">{{ findings_summary.get('total', 0) }}</h3>
            <p class="metric-label">Total Findings</p>
        </div>
        <div class="metric-card">
            <h3 class="metric-val" style="color: var(--emerald);">{{ by_status.get('pass', 0) }}</h3>
            <p class="metric-label">Passed</p>
        </div>
        <div class="metric-card">
            <h3 class="metric-val" style="color: var(--red);">{{ by_status.get('open', 0) }}</h3>
            <p class="metric-label">Open</p>
        </div>
        <div class="metric-card">
            <h3 class="metric-val">{{ by_status.get('na', 0) }}</h3>
            <p class="metric-label">N/A</p>
        </div>
        <div class="metric-card">
            <h3 class="metric-val">{{ by_status.get('not_reviewed', 0) + by_status.get('unknown', 0) }}</h3>
            <p class="metric-label">Not Reviewed</p>
        </div>
    </div>

    <div class="metrics-row">
        <div class="metric-card">
            <h3 class="metric-val" style="color: var(--red);">{{ findings_summary.get('critical', 0) }}</h3>
            <p class="metric-label">Critical</p>
        </div>
        <div class="metric-card">
            <h3 class="metric-val" style="color: var(--amber);">{{ findings_summary.get('warning', 0) }}</h3>
            <p class="metric-label">Warning</p>
        </div>
        <div class="metric-card">
            <h3 class="metric-val">{{ findings_summary.get('info', 0) }}</h3>
            <p class="metric-label">Info</p>
        </div>
    </div>

    {% set open_findings = [] %}
    {% for f in findings %}
        {% if f.get('status') == 'open' %}
            {% if open_findings.append(f) %}{% endif %}
        {% endif %}
    {% endfor %}

    {% if open_findings | length > 0 %}
    <h2 class="sub-title">Open Findings ({{ open_findings | length }})</h2>
    <table>
        <thead>
            <tr>
                <th class="col-id">Rule ID</th>
                <th class="col-status">Status</th>
                <th class="col-sev">Severity</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
        {% for rule in open_findings %}
            {% set rule_detail = rule.get('detail', {}) %}
            <tr>
                <td class="col-id">{{ rule.get('rule_id', '') }}</td>
                <td><span class="badge status-fail">OPEN</span></td>
                <td>
                    <span class="sev-{{ rule.get('severity', 'info') | lower }}">
                        {{ rule.get('category', rule.get('severity', 'INFO')) | upper }}
                    </span>
                </td>
                <td>
                    <div style="font-weight: bold; margin-bottom: 5px;">
                        {{ rule.get('title', 'No Title Provided') }}
                    </div>
                    {% if rule.get('message') and rule.get('message') != rule.get('title') %}
                    <div style="font-size: 0.92rem; margin-bottom: 8px;">
                        {{ rule.get('message', '') }}
                    </div>
                    {% endif %}

                    <button class="toggle-btn" onclick="toggleDetails('d-{{ loop.index }}')">
                        &#9654; View Technical Details
                    </button>
                    <div id="d-{{ loop.index }}" class="details-box">
                        {% if rule_detail.get('checktext') %}
                        <strong>CHECK CONTENT:</strong>
                        <pre>{{ rule_detail.get('checktext', '') }}</pre>
                        {% endif %}
                        {% if rule_detail.get('fixtext') %}
                        <strong>REMEDIATION:</strong>
                        <pre>{{ rule_detail.get('fixtext', '') }}</pre>
                        {% endif %}
                        <strong>FULL DETAIL:</strong>
                        <pre>{{ rule_detail | tojson(indent=2) }}</pre>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% elif findings | length > 0 %}
    <div style="text-align: center; padding: 40px; color: #7f8c8d;">
        <p>No open findings. Host is compliant with all evaluated rules.</p>
    </div>
    {% endif %}

    {% if findings | length > 0 %}
    <div style="margin-top: 24px;">
        <button class="toggle-btn" onclick="toggleDetails('all-findings')">&#9654; View All Findings ({{ findings | length }})</button>
        <div id="all-findings" class="details-box">
            <table>
                <thead>
                    <tr>
                        <th class="col-id">Rule ID</th>
                        <th class="col-status">Status</th>
                        <th class="col-sev">Severity</th>
                        <th>Title</th>
                    </tr>
                </thead>
                <tbody>
                {% for rule in findings %}
                    <tr>
                        <td class="col-id">{{ rule.get('rule_id', '') }}</td>
                        <td>
                            {% if rule.get('status') == 'pass' %}
                            <span class="badge status-ok">PASS</span>
                            {% elif rule.get('status') == 'na' %}
                            <span class="badge">N/A</span>
                            {% elif rule.get('status') == 'open' %}
                            <span class="badge status-fail">OPEN</span>
                            {% else %}
                            <span class="badge status-warn">{{ rule.get('status', 'unknown') | upper }}</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="sev-{{ rule.get('severity', 'info') | lower }}">
                                {{ rule.get('severity', 'INFO') | upper }}
                            </span>
                        </td>
                        <td>{{ rule.get('title', '') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
</div>
</body>
</html>
