<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>STIG Report - {{ inventory_hostname }}</title>
    <style>
        {{ '' | internal.core.shared_report_css }}
    </style>
    <script>
        function toggleDetails(id) {
            var x = document.getElementById(id);
            if (x.style.display === "block") { x.style.display = "none"; } else { x.style.display = "block"; }
        }
    </script>
</head>
<body>

<div class="container">
    <div class="header">
        <div>
            <h1>STIG Remediation Report</h1>
            <div class="meta">Host: <strong>{{ inventory_hostname }}</strong></div>
        </div>
        <div class="meta">Generated: {{ timestamp | default('N/A') }}</div>
    </div>

    {# Calculate Counts #}
    {% set count_failed = _failures | selectattr('status', 'equalto', 'failed') | list | length %}
    {% set count_fixed = _failures | selectattr('status', 'equalto', 'fixed') | list | length %}

    <div class="metrics-row">
        <div class="metric-card">
            <h3 class="metric-val val-fixed">{{ count_fixed }}</h3>
            <p class="metric-label">Rules Remediated</p>
        </div>
        <div class="metric-card">
            <h3 class="metric-val val-failed">{{ count_failed }}</h3>
            <p class="metric-label">Rules Failed</p>
        </div>
    </div>

    {% if _failures | length > 0 %}
        <table>
            <thead>
                <tr>
                    <th class="col-id">Rule ID</th>
                    <th class="col-status">Status</th>
                    <th class="col-sev">Sev</th>
                    <th>Details & Remediation</th>
                </tr>
            </thead>
            <tbody>
                {% for rule in _failures %}
                <tr>
                    <td class="col-id">{{ rule.id }}</td>
                    <td>
                        {% if rule.status == 'fixed' %}
                            <span class="badge status-fixed-badge">REMEDIATED</span>
                        {% else %}
                            <span class="badge status-failed-badge">FAILED</span>
                        {% endif %}
                    </td>
                    <td>
                        <span class="sev-{{ rule.severity }}">{{ rule.severity | upper }}</span>
                    </td>
                    <td>
                        <div style="font-weight: bold; margin-bottom: 5px;">{{ rule.title }}</div>

                        {% if rule.status == 'fixed' %}
                            <div style="color: #27ae60; font-size: 0.9rem; margin-bottom: 5px;">
                                ✅ Automatically fixed by Ansible.
                            </div>
                        {% else %}
                            <div style="color: #c0392b; font-size: 0.9rem; margin-bottom: 5px;">
                                ❌ Could not apply fix automatically. Manual intervention required.
                            </div>
                        {% endif %}

                        <button class="toggle-btn" onclick="toggleDetails('d-{{ rule.id }}')">▶ View Technical Details</button>
                        <div id="d-{{ rule.id }}" class="details-box">
                            <strong>CHECK CONTENT:</strong>
                            <pre>{{ rule.checktext | default('No check text') | trim }}</pre>

                            <strong>REMEDIATION COMMAND:</strong>
                            <pre>{{ rule.fixtext | default('No fix text') | trim }}</pre>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div style="text-align: center; padding: 40px; color: #7f8c8d;">
            <p>No actions were taken. System is fully compliant.</p>
        </div>
    {% endif %}
</div>
</body>
</html>
