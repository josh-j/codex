<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>STIG Report - {{ inventory_hostname }}</title>
  <style>
    {{ '' | internal.core.shared_report_css }}
  </style>
  <script>
    function toggleDetails(id) {
      var x = document.getElementById(id);
      if (!x) return;
      x.style.display = (x.style.display === "block") ? "none" : "block";
    }
    function toggleBlock(id) {
      var x = document.getElementById(id);
      if (!x) return;
      x.style.display = (x.style.display === "block") ? "none" : "block";
    }
  </script>
</head>
<body>
{% set stig_view = stig_host_view | default({}) %}
{% set stig_meta = stig_view.get('meta', {}) %}
{% set stig_target = stig_view.get('target', {}) %}

{# Prefer normalized keys; fall back to older findings if necessary #}
{% set full_audit = stig_view.get('full_audit', []) | default([]) %}
{% set violations = stig_view.get('violations', []) | default([]) %}
{% set dataset = full_audit %}

{# 1. Compute status counts using normalized strings (NotAFinding / Open) #}
{% set ns = namespace(total=0, passed=0, failed=0, na=0, error=0) %}
{% for r in dataset %}
  {% set ns.total = ns.total + 1 %}
  {% set s = (r.status | default('') | string | lower) %}
  {# Recognize both raw 'pass' and normalized 'notafinding' #}
  {% if s in ['pass', 'passed', 'notafinding'] %}
    {% set ns.passed = ns.passed + 1 %}
  {% elif s in ['not_applicable', 'n/a', 'na', 'skipped'] %}
    {% set ns.na = ns.na + 1 %}
  {% elif s in ['error'] %}
    {% set ns.error = ns.error + 1 %}
  {% else %}
    {# Includes 'fail', 'failed', and normalized 'open' #}
    {% set ns.failed = ns.failed + 1 %}
  {% endif %}
{% endfor %}

{# 2. Build the violations list for the table #}
{% set ns_open = namespace(items=[]) %}
{% if violations | length > 0 %}
  {% set ns_open.items = violations %}
{% else %}
  {% for r in dataset %}
    {% set s = (r.status | default('') | string | lower) %}
    {% if s in ['open', 'fail', 'failed', 'error'] %}
      {% set _ = ns_open.items.append(r) %}
    {% endif %}
  {% endfor %}
{% endif %}
{% set open_findings = ns_open.items %}

<div class="container">
  <div class="header">
    <div>
      <h1>STIG Compliance Report</h1>
      <div class="meta">
        Host: <strong>{{ stig_target.get('host', inventory_hostname) }}</strong>
      </div>
      <div class="meta">
        Target: <strong>{{ stig_target.get('target_type', stig_view.get('target_type', 'unknown')) | upper }}</strong>
      </div>
    </div>
    <div class="meta">Generated: {{ stig_meta.get('report_date', timestamp | default('N/A')) }}</div>
  </div>

  {# Prevents a "fully compliant" lie if discovery failed #}
  {% if dataset | length == 0 %}
    <div style="padding: 16px; border: 1px solid #e67e22; background: #fff6e5; border-radius: 10px; margin: 20px 0;">
      <strong>No STIG checks were recorded.</strong>
      <div style="margin-top: 8px;">
        This usually means <code>audit_full_list</code> was empty.
        Verify that the discovery tasks ran successfully and were not skipped.
      </div>
    </div>
  {% endif %}

  <div class="metrics-row">
    <div class="metric-card">
      <h3 class="metric-val">{{ ns.total }}</h3>
      <p class="metric-label">Checks Evaluated</p>
    </div>
    <div class="metric-card">
      <h3 class="metric-val val-fixed">{{ ns.passed }}</h3>
      <p class="metric-label">Passed</p>
    </div>
    <div class="metric-card">
      <h3 class="metric-val val-failed">{{ ns.failed }}</h3>
      <p class="metric-label">Failed</p>
    </div>
    <div class="metric-card">
      <h3 class="metric-val">{{ ns.na }}</h3>
      <p class="metric-label">N/A</p>
    </div>
    <div class="metric-card">
      <h3 class="metric-val">{{ ns.error }}</h3>
      <p class="metric-label">Error</p>
    </div>
  </div>

  {% if open_findings | length > 0 %}
    <table>
      <thead>
        <tr>
          <th class="col-id">Rule ID</th>
          <th class="col-status">Status</th>
          <th class="col-sev">Sev</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
      {% for rule in open_findings %}
        {% set rule_detail = rule.detail | default({}) %}
        {% set rule_raw = rule.raw | default({}) %}
        {% set rule_id = rule.rule_id | default(rule_detail.rule_id | default(rule_raw.id | default(rule.id | default(loop.index)))) %}
        {% set status = (rule.status | default('fail') | string | lower) %}
        <tr>
          <td class="col-id">{{ rule_id }}</td>
          <td>
            {% if status in ['pass', 'passed', 'notafinding'] %}
              <span class="badge status-fixed-badge">PASS</span>
            {% elif status in ['not_applicable', 'n/a', 'na', 'skipped'] %}
              <span class="badge">N/A</span>
            {% elif status in ['error'] %}
              <span class="badge status-failed-badge">ERROR</span>
            {% else %}
              {# Handles 'open', 'fail', 'failed' #}
              <span class="badge status-failed-badge">FAIL</span>
            {% endif %}
          </td>
          <td>
            <span class="sev-{{ (rule.category | default(rule.severity | default('info'))) | lower }}">
              {{ rule.category | default(rule.severity | default('INFO')) | upper }}
            </span>
          </td>
          <td>
            <div style="font-weight: bold; margin-bottom: 5px;">
              {{ rule.title | default(rule.message | default('No Title Provided')) }}
            </div>

            {% if rule_detail.msg is defined and (rule_detail.msg | string | length) > 0 %}
              <div style="font-size: 0.92rem; margin-bottom: 8px;">
                {{ rule_detail.msg }}
              </div>
            {% endif %}

            <button class="toggle-btn" onclick="toggleDetails('d-{{ loop.index }}')">
              ▶ View Technical Details
            </button>

            <div id="d-{{ loop.index }}" class="details-box">
              {% if rule_detail.checktext is defined or rule_raw.checktext is defined %}
                <strong>CHECK CONTENT:</strong>
                <pre>{{ rule_detail.checktext | default(rule_raw.checktext | default('')) | trim }}</pre>
              {% endif %}

              {% if rule_detail.fixtext is defined or rule_raw.fixtext is defined %}
                <strong>REMEDIATION:</strong>
                <pre>{{ rule_detail.fixtext | default(rule_raw.fixtext | default('')) | trim }}</pre>
              {% endif %}

              {% if rule_detail is mapping %}
                <strong>TASK DATA:</strong>
                <pre>{{ rule_detail | to_nice_yaml }}</pre>
              {% endif %}
            </div>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>

    <div style="margin-top: 16px;">
      <button class="toggle-btn" onclick="toggleBlock('all-checks')">▶ View Raw Audit Data</button>
      <div id="all-checks" class="details-box" style="display:none;">
        <pre>{{ dataset | to_nice_yaml }}</pre>
      </div>
    </div>

  {% else %}
    {% if dataset | length > 0 %}
      <div style="text-align: center; padding: 40px; color: #7f8c8d;">
        <p>No violations detected. Host is compliant with all evaluated rules.</p>
      </div>
    {% endif %}
  {% endif %}
</div>
</body>
</html>
