<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>STIG Report - {{ inventory_hostname }}</title>
    <style>
        {{ '' | internal.core.shared_report_css }}
    </style>
    <script>
        function toggleDetails(id) {
            var x = document.getElementById(id);
            if (x.style.display === "block") { x.style.display = "none"; } else { x.style.display = "block"; }
        }
    </script>
</head>
<body>
{% set stig_view = stig_host_view | default({}) %}
{% set stig_meta = stig_view.get('meta', {}) %}
{% set stig_target = stig_view.get('target', {}) %}
{% set stig_summary = stig_view.get('summary', {}) %}
{% set stig_findings = stig_view.get('findings', []) %}
{% set open_findings = stig_findings | selectattr('status', 'equalto', 'open') | list %}
{% set passed_findings = stig_findings | selectattr('status', 'equalto', 'pass') | list %}

<div class="container">
    <div class="header">
        <div>
            <h1>STIG Remediation Report</h1>
            <div class="meta">Host: <strong>{{ stig_target.get('host', inventory_hostname) }}</strong></div>
        </div>
        <div class="meta">Generated: {{ stig_meta.get('report_date', timestamp | default('N/A')) }}</div>
    </div>

    {# Calculate Counts #}
    {% set count_failed = stig_summary.get('by_status', {}).get('open', open_findings | length) %}
    {% set count_fixed = stig_summary.get('by_status', {}).get('pass', passed_findings | length) %}

    <div class="metrics-row">
        <div class="metric-card">
            <h3 class="metric-val val-fixed">{{ count_fixed }}</h3>
            <p class="metric-label">Rules Remediated</p>
        </div>
        <div class="metric-card">
            <h3 class="metric-val val-failed">{{ count_failed }}</h3>
            <p class="metric-label">Rules Failed</p>
        </div>
    </div>

    {% if open_findings | length > 0 %}
        <table>
            <thead>
                <tr>
                    <th class="col-id">Rule ID</th>
                    <th class="col-status">Status</th>
                    <th class="col-sev">Sev</th>
                    <th>Details & Remediation</th>
                </tr>
            </thead>
            <tbody>
     {% for rule in open_findings %}
         {% set rule_detail = rule.detail | default({}) %}
         {% set rule_raw = rule.raw | default({}) %}
         {% set rule_id = rule.rule_id | default(rule_detail.rule_id | default(rule_raw.id | default(''))) %}
                <tr>
                    <td class="col-id">{{ rule_id }}</td>
                    <td>
         {% if rule.status == 'pass' %}
                            <span class="badge status-fixed-badge">REMEDIATED</span>
         {% else %}
                            <span class="badge status-failed-badge">FAILED</span>
         {% endif %}
                    </td>
                    <td>
                        <span class="sev-{{ (rule.category | default(rule.severity | default('info'))) | lower }}">
                            {{ rule.category | default(rule.severity | default('INFO')) | upper }}
                        </span>
                    </td>
                    <td>
                        <div style="font-weight: bold; margin-bottom: 5px;">{{ rule.title | default(rule.message) }}</div>

         {% if rule.status == 'pass' %}
                            <div style="color: #27ae60; font-size: 0.9rem; margin-bottom: 5px;">
                                ✅ Automatically fixed by Ansible.
                            </div>
         {% else %}
                            <div style="color: #c0392b; font-size: 0.9rem; margin-bottom: 5px;">
                                ❌ Could not apply fix automatically. Manual intervention required.
                            </div>
         {% endif %}

                        <button class="toggle-btn" onclick="toggleDetails('d-{{ rule_id | default(loop.index) }}')">▶ View Technical Details</button>
                        <div id="d-{{ rule_id | default(loop.index) }}" class="details-box">
                            <strong>CHECK CONTENT:</strong>
                            <pre>{{ rule_detail.checktext | default(rule_raw.checktext | default('No check text')) | trim }}</pre>

                            <strong>REMEDIATION COMMAND:</strong>
                            <pre>{{ rule_detail.fixtext | default(rule_raw.fixtext | default('No fix text')) | trim }}</pre>
                        </div>
                    </td>
                </tr>
     {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div style="text-align: center; padding: 40px; color: #7f8c8d;">
            <p>No actions were taken. System is fully compliant.</p>
        </div>
    {% endif %}
</div>
</body>
</html>
